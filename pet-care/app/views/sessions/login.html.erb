
<div class="ui centered grid container">
  <div class="nine wide column">

    <%= render "layouts/messages"  %>

    <div class="ui fluid card">
      <div class="content">
        <%= form_with scope: :session, url: login_path, class: "ui form" do |form| %>
          <div class="field">
            <%= form.label :email %>
            <%= form.text_field :email %>
          </div>
          <div class="field">
            <%= form.label :password %>
            <%= form.password_field :password %>
          </div>
          <%= form.submit "Log in", class: "ui primary button" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
