
<div class="container">

  <%= render "layouts/errors", entity: nil, entity_name: "User" %>

  <br/>

  <%= form_with scope: :session, url: login_path do |form| %>

    <div class="card">
      <div class="card-body">

        <div class="mb-3">
          <%= form.label :email, { class: "form-label"} %>
          <%= form.text_field :email, { class: "form-control", placeholder: "Email" } %>
        </div>

        <div class="mb-3">
          <%= form.label :password, { class: "form-label"} %>
          <%= form.password_field :password, { class: "form-control", placeholder: "Password" } %>
        </div>

        <%= form.submit "Log in", class: "btn btn-primary" %>

      </div>
    </div>
  <% end %>
</div>