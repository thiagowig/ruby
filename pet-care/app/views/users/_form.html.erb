<div class="ui centered grid container">
  <div class="nine wide column">

    <%= render "layouts/messages" %>

    <div class="ui fluid card">
      <div class="content">
          <%= form_with model: user, class: "ui form" do |form| %>

            <div class="field">
              <%= form.label :name %>
              <%= form.text_field :name %>
            </div>
            <div class="field">
              <%= form.label :email %>
              <%= form.text_field :email %>
            </div>
            <div class="field">
              <%= form.label :password %>
              <%= form.password_field :password  %>
            </div>
            <div class="field">
              <%= image_tag user.displayed_image, loading: "lazy", class: "profile-image" %>
              <%= form.file_field :image %>
            </div>

          <div class="">
            <%= form.submit I18n.t("signup"), class: "ui primary button" %>
          </div>
        <% end %>
    </div>
  </div>
</div>
</div>
